{% extends 'base.html.twig' %}

{% block title %} {{ post.title }} {% endblock %}

{% block body %}
    <div>
        <h2>Post</h2>
        <div>
            <div>
                <h3><a href="{{ path('blog_show', { 'id': id }) }}" > <em>{{ id|lower }}</em> - {{ post.title|upper }} </a></h3>
                <p>{{  post.text|bingo }}</p>
                <p>Date: {{ post.date|date('Y-m-d h:i:s') }}</p>
                <p>Price {{ post.price|price }}</p>
                <p>Here is the current locale {{ locale }}</p>
                <p>{{ message }}</p>
            </div>
        </div>
    </div>
{%  endblock %}

