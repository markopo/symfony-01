
{% set initials = mp.user.fullname|split(' ') %}
<div style="padding-top:15px;" class="">
    <small class="d-block text-right mt-3">
        {%  if is_granted('edit', mp) %}
            <a href="{{ path('micro_post_edit', { 'id': mp.id }) }}">Edit</a>
        {% endif %}

        {% if is_granted('delete', mp) %}
            <a style="color:red;" href="{{ path('micro_post_delete', { 'id': mp.id }) }}">Delete</a>
        {% endif %}

    </small>
    <div class="media text-muted pt-3">
        <img src="https://via.placeholder.com/32x32/e83e8c/fff?text={{ attribute(initials, 0)|first }}{{ attribute(initials, 1)|first }}" title="{{ mp.user.fullname }}" alt="{{ mp.user.fullname }}" class="mr-2 rounded">
        <p class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
            <span class="d-block"><a href="{{ path('micro_post_post', { 'id' : mp.id }) }}" ><small>{{ mp.time|date('Y-m-d') }}</small></a>
                <span style="float:right;" class="small" >
                    Created by: <a href="{{ path('micro_post_user', { 'username' : mp.user.username }) }}" ><b>@{{ mp.user.fullname }}</b></a>
                </span>
            </span>
            {{ mp.text }}
            <br />
            <a href="{{ path('micro_post_post', { 'id' : mp.id }) }}">link >></a>
        </p>
    </div>
</div>